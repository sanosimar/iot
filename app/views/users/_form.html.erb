<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= label_tag :email %><br>
    <%= email_field_tag :email, value=nil, option = {:class => "form-control"} %>
  </div>
  <div class="form-group">
    <%= label_tag(:username )%><br>
    <%= text_field_tag(:username, value=nil, option = {class: "form-control"}) %>
  </div>
  <div class="form-group">
    <%= f.label :password %><br>
    <%= f.password_field :password,:class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation,:class => "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :subscription_id %><br>
    <%= select_tag :subscription_id, options_from_collection_for_select(Subscription.all, "id", "name_with_price", "1"), :class => "form-control" %>
  </div>

  <div class="form-group">
  <%= f.submit :class => "btn btn-success"%>
  </div>
<% end %>
