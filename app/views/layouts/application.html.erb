<!DOCTYPE html>
<html>
<head>
  <title>Intertic</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-inverse">

    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "Intertic", {:controller => :home, :action => :index },:class => "navbar-brand" %>
      </div>
      <div id="navbar" class="navbar-right navbar-collapse collapse">
          <% if current_user %>

              <ul class="nav navbar-nav navbar-inverse">
                <li><%= link_to "Components",{ :controller => :components, :action => :index } %></li>
                <li><%= link_to "Groups",{ :controller => :group_components, :action => :index } %></li>
                <li><%= link_to "Users",{ :controller => :users, :action => :index } %></li>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.profile.name %> <span class="caret"></span></a>
                  <ul class="dropdown-menu">
                    <li><%= link_to "My Profile",{ :controller => :profiles, :action => :index } %></li>
                    <li><%= link_to "My Subscription",{ :controller => :subscriptions, :action => :index } %></li>
                    <li><%= link_to "Contact Support",{ :controller => :profiles, :action => :index } %></li>
                    <li><%= link_to "Direct Messages",{ :controller => :profiles, :action => :index } %></li>
                    <li role="separator" class="divider"></li>
                    <li><%= link_to "Log Out",{ :controller => :sessions, :action => :destroy } %></li>
                  </ul>
                </li>
              </ul>

          <% else %>
              <%= link_to "Log in",{ :controller => :sessions, :action => :new }, :class => "btn btn-primary navbar-btn" %>
              <%= link_to "Sing up",{ :controller => :users, :action => :new }, :class => " btn btn-success navbar-btn" %>
          <% end %>
      </div>
    </div>
  </nav>

  <div class="container">
    <%= yield %>
  </div>


  <br>
  <br>
  <br>
  <footer class="footer">
    <div class="container">
      <p>Â© 2016 Jadesoft, Inc.</p>
    </div>
  </footer>

</body>
</html>
