<p id="notice"><%= notice %></p>

<h1>Listing Group Components</h1>

<table class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Description</th>
      <th>Enable</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @group_components.each do |group_component| %>
      <tr>
        <td><%= group_component.user_id %></td>
        <td><%= group_component.name %></td>
        <td><%= group_component.description %></td>
        <td><%= group_component.enable %></td>
        <td><%= link_to 'Show', group_component,:class => "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_group_component_path(group_component), :class => "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', group_component, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_group_component_path, class: 'btn btn-success' do %>
    <i class="glyphicon glyphicon-plus"></i> New Group Component
<% end %>