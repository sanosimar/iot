<p id="notice"><%= notice %></p>

<h1>Listing Profiles</h1>

<table class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Email confirmed</th>
      <th>Bithday</th>
      <th>Bio</th>
      <th>Color</th>
      <th>Image url</th>
      <th>Subscription</th>
      <th>Social network</th>
      <th colspan="3">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.user_id %></td>
        <td><%= profile.name %></td>
        <td><%= profile.email_confirmed %></td>
        <td><%= profile.bithday %></td>
        <td><%= profile.bio %></td>
        <td><%= profile.color %></td>
        <td><%= profile.image_url %></td>
        <td>
          <% if profile.subscription %>
                  <%= profile.subscription.name_with_price %>
          <% end %>
        </td>
        <td><%= profile.social_network %></td>
        <td><%= link_to 'Show', profile, :class => "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile), :class => "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_profile_path, class: 'btn btn-success' do %>
    <i class="glyphicon glyphicon-plus"></i> New Profile
<% end %>