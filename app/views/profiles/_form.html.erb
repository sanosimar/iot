<%= form_for(@profile, html: {class: 'form-signin'}) do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :user_id %><br>
    <%= f.number_field :user_id,:class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name,:class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :email_confirmed %><br>
    <%= f.check_box :email_confirmed,:class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :bithday %><br>
    <%= f.date_select :bithday,:class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :bio %><br>
    <%= f.text_area :bio,:class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :color %><br>
    <%= f.color_field :color,:class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :image_url %><br>
    <%= f.text_field :image_url,:class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :subscription %><br>
    <%= f.text_field :subscription,:class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :social_network %><br>
    <%= f.text_field :social_network,:class => "form-control" %>
  </div>
    <div class="actions form-group ">
      <%= f.submit :class => 'btn btn-success' %>
    </div>
