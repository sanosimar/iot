<p id="notice"><%= notice %></p>

<h1>Listing Prices</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Name with price</th>
      <th>Value</th>
      <th>Currency</th>
      <th>Color</th>
      <th>Group</th>
      <th>Enable</th>
      <th colspan="3">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @prices.each do |price| %>
      <tr>
        <td><%= price.name %></td>
        <td><%= price.name_with_price %></td>
        <td><%= price.value %></td>
        <td><%= price.currency %></td>
        <td><%= price.color %></td>
        <td><%= price.group %></td>
        <td><%= price.enable %></td>
        <td><%= link_to 'Show', price, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_price_path(price), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', price, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_price_path, class: 'btn btn-success' do %>
    <i class="glyphicon glyphicon-plus"></i> New Price
<% end %>