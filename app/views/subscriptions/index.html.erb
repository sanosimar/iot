<p id="notice"><%= notice %></p>

<h1>Listing Subscriptions</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Name with price</th>
      <th>Value</th>
      <th>Currency</th>
      <th>Color</th>
      <th>Group</th>
      <th>Enable</th>
      <th colspan="3"> Options</th>
    </tr>
  </thead>

  <tbody>
    <% @subscriptions.each do |subscription| %>
      <tr>
        <td><%= subscription.name %></td>
        <td><%= subscription.name_with_price %></td>
        <td><%= subscription.value %></td>
        <td><%= subscription.currency %></td>
        <td><%= subscription.color %></td>
        <td><%= subscription.group %></td>
        <td><%= subscription.enable %></td>
        <td><%= link_to 'Show', subscription, :class => "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_subscription_path(subscription), :class => "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', subscription, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_subscription_path, class: 'btn btn-success' do %>
    <i class="glyphicon glyphicon-plus"></i> New Subscription
<% end %>
